.container
  .row.mt-5
    .col-12
      %h1 Farm manager
      %table.table.table-striped#table{'data-detail-view': true, 'data-detail-formatter': 'detailFormatter'}
        %thead
          %tr
            %th{ scope: 'col', 'data-field': 'token'} Token
            %th{ scope: 'col', 'data-field': 'tvl'} TVL
            %th{ scope: 'col', 'data-field': 'apy'} APY
            %th{ scope: 'col', 'data-field': 'deposit' } Deposit

:javascript
  function detailFormatter(index, row) {
    var html = []
    $.each(row, function (key, value) {
      html.push('<p><b>' + key + ':</b> ' + value + '</p>')
    })
    return html.join('')
  }


  var $table = $('#table')

  $(function() {
    var data = [
      {
        'token': 'sSCRT-SEFI LP',
        'tvl': '$0',
        'apy': '0%',
        'deposit': '$3'
      }
    ]
    $table.bootstrapTable({data: data, detailView: true})
  })