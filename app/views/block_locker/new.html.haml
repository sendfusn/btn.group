.container
  .row.mt-5
    .col-12
      #block-locker-new
        .row.mt-5
          .col-lg-6.offset-lg-3
            .card
              .card-body
                %h3= features[:block_locker][:name]
                %p Blockchain: #{features[:block_locker][:blockchain]}
                %form{ name: 'aliasCreateForm' }
                  .mb-3
                    %input.form-control.w-100#alias{ name: 'alias', required: true }
                  = link_to 'Cancel', block_locker_index_path, class: 'btn btn-link', id: 'cancel-button'
                  %button.btn.btn-primary#create-button{ type: 'submit', disabled: true }
                    #loading
                      %span.spinner-grow.spinner-grow-sm{ 'aria-hidden' => 'true', :role => 'status' }
                      %span Loading...
                    .d-none#ready
                      Create
