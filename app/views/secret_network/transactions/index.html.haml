.header-banner.bg-theme-grad-s2
  .nk-banner
    .banner.banner-page
      .mt-3.w-100
        .container#secret-network-transactions
          .row.mb-5
            .col-12
              .card
                .card-body
                  %h3= features[:secret_network][:features][:transactions][:name]
                  %p.mb-0
                    %b Blockchain:
                    = cl_image_tag(features[:secret_network][:cloudinary_public_id], width: 18, height: 18, crop: :fill, dpr: 2, aspect_ratio: 1, fetch_format: :auto, quality: :auto)
                    = features[:secret_network][:name].to_s
                  %form{ name: 'secretNetworkTransactionsForm' }
                    %p
                      %b Environment:
                      Staging / Testnet
                      %label.switch
                        %input{ name: 'production', type: 'checkbox', checked: true }
                        %span.slider
                      Production
                    .form-group
                      %label.form-label{ for: 'address' } Address
                      %input.form-control#address{ name: 'address' }
                    .form-group
                      %label.form-label{ for: 'contract-address' } Contract address
                      %select.form-control#contract-address{ name: 'contractAddress' }
                        - tokens[:production].each do |token|
                          %option{ value: token[:address] }= token[:name]
                    %button.btn.btn-primary.btn-md#search-button{ type: 'submit' }
                      .d-none#loading
                        %em.spinner-grow.spinner-grow-sm{ 'aria-hidden' => 'true', :role => 'status' }
                        %em Loading...
                      #ready
                        Search
                    .mb-5
                  .alert.alert-danger.d-none.mt-3#alert-danger
                  %h6
                    Balance:
                    %span#balance
                  .block
                    %table.table.table-striped.table-bordered
                      %thead
                        %tr
                          %td Date
                          %td Description
                          %td
                            Amount
                            %span#denomination
                      %tbody

                  %p * Minting transactions are not included (e.g. receiving tokens via the bridge etc)
  .nk-ovm.shape-q
