.header-banner.bg-theme-grad-s2
  .nk-banner
    .banner.banner-page
      .mt-3.w-100
        .container#secret-network-dex-aggregator
          .row.justify-content-center
            .col-xl-6.col-lg-9
              .card.mt-3.mb-5
                .card-body
                  %h3= features[:secret_network][:features][:dex_aggregator][:name]
                  %p.mb-0
                    %b Blockchain:
                    = cl_image_tag(features[:secret_network][:cloudinary_public_id], width: 18, height: 18, crop: :fill, dpr: 2, aspect_ratio: 1, fetch_format: :auto, quality: :auto)
                    = features[:secret_network][:name].to_s
                  %hr
                  .card.border.p-3{ style: 'background-color: rgb(247, 248, 250);' }
                    .form-group
                      %select.form-control{ name: 'fromTokenAddress' }
                        %option{ value: 'butt' } BUTT
                        %option{ value: 'scrt' } SCRT
                        %option{ value: 'sefi' } SEFI
                        %option{ value: 'sscrt' } sSCRT
                    .form-group.m-0
                      %input.form-control{ name: 'fromAmount', placeholder: '0.0' }
                  .text-center
                    %svg.cursor-pointer.leading-none{ :fill => 'none', :height => '1em', :stroke => 'currentColor', 'stroke-linecap' => 'round', 'stroke-linejoin' => 'round', 'stroke-width' => '2', :viewbox => '0 0 24 24', :width => '1em', :xmlns => 'http://www.w3.org/2000/svg' }
                      %line{ x1: '12', x2: '12', y1: '5', y2: '19' }
                      %polyline{ points: '19 12 12 19 5 12' }
                  .card.border.p-3{ style: 'background-color: rgb(247, 248, 250);' }
                    .form-group
                      %select.form-control{ name: 'toTokenAddress' }
                        %option{ value: 'butt' } BUTT
                        %option{ value: 'scrt' } SCRT
                        %option{ value: 'sefi' } SEFI
                        %option{ value: 'sscrt' } sSCRT
                    .form-group.m-0
                      %input.form-control{ name: 'toAmount', placeholder: '0.0' }
                  %button.btn.btn-grad-alt.w-100.mt-4
                    Swap
  .nk-ovm.shape-q
  .particles-container.particles-bg#particles-bg{ 'data-pt-base' => '#00c0fa', 'data-pt-base-op' => '.3', 'data-pt-line' => '#2b56f5', 'data-pt-line-op' => '.5', 'data-pt-shape' => '#00c0fa', 'data-pt-shape-op' => '.2' }
