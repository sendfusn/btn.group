.header-banner.bg-theme-grad-s2
  .nk-banner
    .banner.banner-page
      .banner-wrap
        .container#secret-network-smart-contract-querier
          .row.mb-5.mt-3
            .col-lg-10.offset-lg-1
              .card
                .card-body
                  %h3= features[:secret_network][:features][:smart_contract_querier][:name]
                  %p
                    Blockchain:
                    = cl_image_tag(features[:secret_network][:cloudinary_public_id], width: 18, height: 18, crop: :fill, dpr: 2, aspect_ratio: 1, fetch_format: :auto, quality: :auto)
                    = features[:secret_network][:name].to_s
                  %form{ name: 'secretNetworkSmartContractQuerierForm' }
                    .form-group
                      .btn-group.btn-group-toggle{ 'data-toggle' => 'buttons' }
                        %label.btn.btn-light.btn-md
                          %input#production{ name: 'environment', type: 'radio', value: 'production', checked: true } Production
                        %label.btn.btn-md.btn-light
                          %input#staging{ name: 'environment', type: 'radio', value: 'staging' } Staging / Testnet
                    .mb-3
                      %label.form-label{ for: 'contract-address' } Contract address
                      %input.form-control#contract-address{ name: 'contractAddress', required: true, placeholder: 'secret123456...' }
                    .mb-3
                      .row
                        .col-md-6
                          %label.form-label{ for: 'function-name' } Function name
                          %input.form-control#function-name{ name: 'functionName', placeholder: 'show...', required: true }
                    #params-container
                    .mb-3
                      .text-center
                        %button.btn.btn-md.btn-light.w-100#add-new-param{ type: 'button' } + Param
                    %button.btn.btn-primary.btn-md#search-button{ type: 'submit' }
                      .d-none#loading
                        %em.spinner-grow.spinner-grow-sm{ 'aria-hidden' => 'true', :role => 'status' }
                        %em Loading...
                      #ready
                        Search
              .card.my-3.d-none#result-container
                .card-body
                  %h3 Result
                  %pre.p-1.m-1.alert.alert-success.d-none#result-value
                  .alert.alert-danger.d-none.mt-3#alert-danger
  .nk-ovm.shape-q
