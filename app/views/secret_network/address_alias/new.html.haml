.header-banner.bg-theme-grad-s2
  .nk-banner
    .banner.banner-page
      .banner-wrap
        .container#aliases-new
          .row.mt-5
            .col-lg-6.offset-lg-3
              .card
                .card-body
                  %h3= features[:secret_network][:features][:address_alias][:name]
                  %p Blockchain: #{features[:secret_network][:name]}
                  %form{ name: 'aliasCreateForm' }
                    .mb-3
                      %input.form-control.w-100#alias{ name: 'alias', required: true }
                    = link_to 'Cancel', secret_network_address_alias_index_path, class: 'btn btn-link', id: 'cancel-button'
                    %button.btn.btn-primary#create-button{ type: 'submit', disabled: true }
                      #loading
                        %em.spinner-grow.spinner-grow-sm{ 'aria-hidden' => 'true', :role => 'status' }
                        %em Loading...
                      .d-none#ready
                        Create

%main.nk-pages
