.header-banner.bg-theme-grad-s2
  .nk-banner
    .banner.banner-page
      .banner-wrap
        .container#aliases-search
          .row
            .col-lg-8.offset-lg-2
              .card
                .card-body
                  = link_to 'New', new_secret_network_address_alias_path, class: 'btn btn-secondary btn-md float-right mb-3'
                  %h3= features[:secret_network][:features][:address_alias][:name]
                  %p
                    Blockchain:
                    = cl_image_tag(features[:secret_network][:cloudinary_public_id], width: 18, height: 18, crop: :fill, dpr: 2, aspect_ratio: 1, fetch_format: :auto, quality: :auto)
                    = features[:secret_network][:name].to_s
                  %form{ name: 'aliasSearchForm' }
                    .mb-3
                      .form-check
                        %input.form-check-input#address{ checked: 'checked', name: 'searchType', type: 'radio', value: 'address' }
                        %label.form-check-label{ for: 'address' } Address
                      .form-check
                        %input.form-check-input#alias{ name: 'searchType', type: 'radio', value: 'alias' }
                        %label.form-check-label{ for: 'alias' } Alias
                    .mb-3
                      %input.form-control.w-100#search-value{ name: 'searchValue', required: true }
                    %button.btn.btn-primary.btn-md#search-button{ type: 'submit', disabled: true }
                      #loading
                        %em.spinner-grow.spinner-grow-sm{ 'aria-hidden' => 'true', :role => 'status' }
                        %em Loading...
                      .d-none#ready
                        Search
              .card.my-3.d-none#result-container
                .card-body
                  %h3 Result
                  %pre.p-1.m-1.alert.alert-success.d-none#result-value
                  .alert.alert-danger.d-none.mt-3#alert-danger
