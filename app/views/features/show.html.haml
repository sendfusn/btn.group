.container
  .row.mt-5
    .col-12
      - if feature.slug == 'block-locker'
        #block-locker-show
          .col-lg-6.offset-lg-3
            .card
              .card-header
                = link_to 'New', features_block_locker_new_path, class: 'btn btn-primary float-end mb-3'
                %h1= feature.name
                %p Blockchain: #{feature.blockchain.humanize}
              .card-body
                %form{ name: 'aliasSearchForm' }
                  .mb-3
                    %input.form-control.w-100#secret-alias{ name: 'alias', required: true }
                  %button.btn.btn-primary#search-button{ type: 'submit', disabled: true }
                    #loading
                      %span.spinner-grow.spinner-grow-sm{ 'aria-hidden' => 'true', role: 'status' }
                      %span Loading...
                    .d-none#ready
                      Search
            .card.mt-3.d-none#result
              .card-body
                %h3 Address
                %p#human-address
