.header-banner.bg-theme-grad-s2
  .nk-banner
    .banner.banner-page
      .banner-wrap
        .container#features
          .row.justify-content-center
            .col-xl-6.col-lg-9
              .banner-caption.cpntc-light.text-center
                .cpn-head.mt-0
                  %h2.title.ttu.text-white Features
  .nk-ovm.shape-q
%main.nk-pages
  %section.section.bg-white
    .container
      .row
        .col-12
          %table.table-bordered.table
            %thead
              %tr
                %td.table-head Feature
                %td.table-head Blockchain
                %td.table-head Status
            %tbody
              - features.each do |blockchain_symbol, blockchain_object|
                - blockchain_object[:features].each do |feature_key, feature_value|
                  %tr
                    %td= link_to feature_value[:name], "/#{blockchain_symbol}/#{feature_key}", class: 'text-decoration-none'
                    %td= blockchain_object[:name]
                    %td= feature_value[:status]
