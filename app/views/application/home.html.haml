.header-banner.bg-theme-grad-s2#home
  .nk-banner
    .banner.banner-fs.banner-single.banner-s1.banner-s1-overlay
      .banner-wrap
        .container
          .row.align-items-center.justify-content-center.justify-content-lg-between.gutter-vr-60px
            .col-lg-6.col-xl-5.col-md-8.col-sm-9.order-last
              .token-status.token-status-s3.round.bg-theme.tc-light
                %h4.title-md.title-thin Buttcoin Round 2 Sale Has Sold Out!
                .token-info.token-info-s1
                  .token-info-item.token-info-item-s1
                    .token-info-item-list
                      %span Token Price:
                      %h4 1 SEFI = 1 BUTT
                    .token-info-item-list
                      %span We Accept:
                      %h4
                        %em.fab.fa-sefi
                          = cl_image_tag('logos/sefi_xa4yx2', width: 24, height: 24, crop: :fill, dpr: 2, aspect_ratio: 1, fetch_format: :auto, quality: :auto)
                        SEFI
                .token-info.token-info-s1.mb-0
                  .progress-wrap.progress-wrap-point.mb-0
                    .progress-bar.progress-bar-xs
                      .progress-percent.progress-percent-s2#swap-progress-percent{ 'data-percent' => '100', :style => 'width: 100%;' }
                    %ul.progress-info.progress-info-s2
                      %li
                        %span.tc-theme#percentage-swapped{ style: 'font-weight: 400;' } 100%
                      %li.text-right
                        %span.tc-theme#total-raised{ style: 'font-weight: 400;' } 3,877,181.2/3,877,181.2
                .token-action.token-action-s2.flex-wrap.flex-sm-nowrap
                  = link_to 'Learn more', secret_network_buttcoin_index_path, class: 'btn btn-md btn-grad w-100'
            .col-lg-6.col-xl-6.text-center.text-lg-left
              .banner-caption.tc-light
                .cpn-head.mt-0
                  %h1.title.title-thin.title-xl-2 We develop software for blockchain.
                .cpn-text.cpn-text-s2
                  %p.lead-s2.lead-light Simplicity, transparency and communication are key.
                .cpn-btns
                  %ul.btn-grp
                    %li= link_to 'Features', features_path, class: 'btn btn-md btn-primary btn-outline'
                    %li= link_to 'Buttcoin', secret_network_buttcoin_index_path, class: 'btn btn-md btn-primary btn-outline'
                .cpn-social
                  %h4.title-xs CURRENTLY BUILDING ON
                  %ul.social
                    %li
                      = link_to 'https://near.org/', target: '_blank', rel: 'noopener' do
                        %em.social-icon.fab
                          = cl_image_tag('logos/icon_wht_nm_xnjxrm', width: 20, crop: :scale, dpr: 2, fetch_format: :auto, class: 'p-1')
                        %span NEAR
                    %li
                      = link_to 'http://scrt.network', target: '_blank', rel: 'noopener' do
                        %em.social-icon.fab
                          = cl_image_tag(features[:secret_network][:cloudinary_public_id], width: 20, crop: :scale, dpr: 2, fetch_format: :auto)
                        %span Secret Network

