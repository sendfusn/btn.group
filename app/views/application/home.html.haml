%main.nk-pages
  %section.section.bg-light#about
    .container
      .section-head.section-head-s7.text-center.wide-auto-sm
        %h2.title.title-thin Features
      .nk-block.nk-block-features-s2
        .row.align-items-center.gutter-vr-30px
          .col-lg-4.col-md-6
            = link_to secret_network_address_alias_index_path do
              .card.card-lg-y.feature.feature-center
                .feature-icon.feature-icon-bg-grd.feature-icon-s5-1.p-1
                  = cl_image_tag 'secret_network/address_alias/wallet_jkkqa4', crop: :lpad, dpr: 2, fetch_format: :auto, height: 246, width: 230
                .feature-text
                  %h4.title.title-md.title-dark.mb-1 Address alias
                  %p
                    = cl_image_tag(features[:secret_network][:cloudinary_public_id], width: 18, height: 18, crop: :scale, dpr: 2, aspect_ratio: 1, fetch_format: :auto, quality: :auto, style: 'vertical-align: text-top;', class: 'mr-1')
