.container#aliases-search
  .row.mt-5
    .col-lg-6.offset-lg-3
      .row
        .col-12
          = link_to 'New', new_alias_path, class: 'btn btn-primary float-end mb-3'
      .card
        .card-body
          %h3 Alias
          %form{:name => "aliasSearchForm"}
            .mb-3
              %input#secret-alias.form-control.w-100{name: "alias", required: true}
            %button.btn.btn-primary#search-button{type: "submit", disabled: true}
              #loading
                %span.spinner-grow.spinner-grow-sm{"aria-hidden" => "true", :role => "status"}
                %span#loading Loading...
              #ready.d-none
                Search
      .card#result.mt-3.d-none
        .card-body
          %h3 Address
          %p#human-address
